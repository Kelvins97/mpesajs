{
  "name": "mpesa-node",
  "version": "0.1.3",
  "main": "dist/index.js",
  "module": "dist/mpesa-node.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "description": "Node M-Pesa Library",
  "repository": {
    "type": "git",
    "url": "https://github.com/safaricom/mpesa-node-library"
  },
  "dependencies": {
    "axios": "^0.19.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "expect.js": "^0.3.1",
    "express": "^4.17.1",
    "got": "^9.6.0",
    "husky": "^3.0.1",
    "jsdoc": "^3.6.3",
    "mocha": "^6.2.0",
    "ngrok": "^3.2.3",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1",
    "standard": "^13.1.0",
    "supertest": "^4.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "scripts": {
    "build": "tsdx build",
    "test": "npm run test-unit && npm run test-integration",
    "test-unit": "mocha tests/unit/*.test.js",
    "test-integration": "nyc --reporter=text mocha --exit tests/integrations/*.js"
  },
  "keywords": [
    "mpesa",
    "mpesa-node",
    "mpesa-api",
    "typescript"
  ],
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  },
  "author": "Geoffrey Mureithi",
  "license": "MIT"
}
